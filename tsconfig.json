{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "rootDir": "./",
    "outDir": "build",
    "lib": ["ESNext"],
    "moduleResolution": "node",
    "allowJs": true,
    "paths": {
      "@/*": ["./*"]
    },
    "types": ["node"],
    "noEmit": true,
    "strict": true,
    "skipLibCheck": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": "."
  },
  "include": ["api/**/*.ts", "src/**/*.ts"]
}
